<% if (typeof pages != 'undefined' && pages > 1) { %>
        <div class="col-sm-7 col-md-offset-2" style="padding: 12px;">
            <ul class="pagination">
                <% for( let index = 1; index <= pages; index++ ) { %>
                    <li 
                        <% if (index == currentPage) { %>
                            class='active'
                            <% } %>
                        ><a href="<%= page + "?page=" + index %>"><%= index %> </a>
                    </li>
                <% } %>
            </ul>
        </div>
<% } %>

</div>

