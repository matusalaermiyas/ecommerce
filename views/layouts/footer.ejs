<script src="/js/activate_bars.js"></script>
<script>
    AOS.init();

    const type=  jar.get('type');
    const details = decodeURI(jar.get('details'))

    if(type === 'error') Swal.fire({ icon: 'error', title: 'Error', text: details})
    else if(type === 'success') Swal.fire( 'Success', details, 'success' )
    else if(type === 'info') Swal.fire({ icon: 'info', title: 'Info', text: details})

    jar.remove('type')
    jar.remove('details')
</script>
